{
  // Editor appearance and behavior
  "editor.fontSize": 14,
  "editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": false,
  "editor.lineHeight": 22,
  "editor.renderLineHighlight": "gutter",
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.minimap.enabled": true,
  "editor.rulers": [],
  "editor.scrollBeyondLastLine": false,
  "editor.smoothScrolling": true,
  "editor.wordWrap": "off",
  // Light theme with good readability
  "workbench.colorTheme": "Default Light+",
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "workbench.list.openMode": "doubleClick",
  // Sidebar and activity bar settings (light mode)
  "workbench.colorCustomizations": {
    "activityBar.background": "#f5f5f5",
    "activityBar.foreground": "#333333",
    "activityBar.inactiveForeground": "#888888",
    "activityBar.border": "#e0e0e0",
    "activityBarBadge.background": "#007acc",
    "activityBarBadge.foreground": "#ffffff",
    "sideBar.background": "#f8f8f8",
    "sideBar.foreground": "#333333",
    "sideBar.border": "#e0e0e0",
    "sideBarTitle.foreground": "#333333",
    "sideBarSectionHeader.background": "#f0f0f0",
    "sideBarSectionHeader.foreground": "#333333",
    "sideBarSectionHeader.border": "#e0e0e0"
  },
  // Format and code quality
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  // IntelliSense and suggestions
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.tabCompletion": "on",
  // JavaScript/TypeScript settings
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  // PHP settings
  "php.validate.enable": true,
  "php.suggest.basic": true,
  // File handling
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.eol": "\n",
  // Terminal
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.cursorBlinking": true,
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  // Disable telemetry
  "telemetry.telemetryLevel": "off",
  // Disable UI distractions
  "breadcrumbs.enabled": false,
  "editor.glyphMargin": false,
  "editor.folding": true,
  "editor.hideCursorInOverviewRuler": true,
  "editor.overviewRulerBorder": false,
  "window.menuBarVisibility": "toggle",
  "macle.userIdentifierId": "c2d20e3acc7db21b4668e55d89031729",
  "explorer.confirmDelete": false
}
